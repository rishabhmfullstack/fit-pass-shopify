<section class="success-screen-container" style="background: {{ section.settings.bg_color }};">
  <div class="backgorund_image">
    <img src="{{ section.settings.backgroundimage | img_url: 'master' }}" width="" height="" class="backgorund_image">
    <div class="success-icon">
      <span>
        <img src="{{ section.settings.successIcon | img_url: 'master' }}" width="" height="" class="successIcon">
      </span>
      <h2 class="success-title">{{ section.settings.heading }}</h2>
    </div>
  </div>
  <div class="main_container">
    <div class="success_content">
      <p>{{ section.settings.description }}</p>
    </div>
    <div class="download_container">
      <div class="download_main_title">
        <h2>{{ section.settings.download_title }}</h2>
      </div>
      <div class="download_main_image">
        <img src="{{ section.settings.downloadimg | img_url: '200x' }}" width="" height="">
      </div>
      <!-- App Store Buttons -->
      <div class="app-buttons">
        {% for block in section.blocks %}
          <div class="app_col">
            {% if block.settings.appstore_img %}
              <a href="{{ block.settings.appstore_link }}">
                <img
                  src="{{ block.settings.appstore_img | img_url: 'master' }}"
                  alt="{{ block.settings.appestore_title }}"
                  width=""
                  height=""
                >
              </a>
              <div class="app_label">
                <p class="sub_label">{{ block.settings.appstore_sub }}</p>
                <h5>{{ block.settings.appestore_title }}</h5>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Success Activation Screen",
  "settings": [
    {
      "type": "image_picker",
      "id": "backgroundimage",
      "label": "Success Image"
    },
    {
      "type": "image_picker",
      "id": "successIcon",
      "label": "Success Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your 7 Day Free Trial has been activated"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Access 8,100+ fitness centres, expert nutritionists, AI personal coaching, doctors, health checkups, and so much more — all with a single pass"
    },
    {
      "type": "text",
      "id": "download_title",
      "label": "Download Title",
      "default": "Download the our app & start your fitness journey"
    },
    {
      "type": "text",
      "id": "bottom_title",
      "label": "Bottom Title",
      "default": "Visit 35,000+ Gyms"
    },
    {
      "type": "text",
      "id": "bottom_highlight",
      "label": "Bottom Highlight",
      "default": "with amazing ambience ✨"
    },
    {
      "type": "image_picker",
      "id": "downloadimg",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "app_content",
      "name": "Add Apps",
      "settings": [
        {
          "type": "image_picker",
          "id": "appstore_img",
          "label": "App Store Image"
        },
        {
          "type": "text",
          "id": "appstore_sub",
          "label": "App sub_text",
          "default": "Download on the"
        },
        {
          "type": "text",
          "id": "appestore_title",
          "label": "Apple Store label",
          "default": "Apple Store"
        },
        {
          "type": "url",
          "id": "appstore_link",
          "label": "App Store Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Success Activation Screen"
    }
  ]
}
{% endschema %}
